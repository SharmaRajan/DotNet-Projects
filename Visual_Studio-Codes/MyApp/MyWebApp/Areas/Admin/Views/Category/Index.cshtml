@model IEnumerable<CategoryModel>

@{
    ViewData["Title"] = "Index";
}

@*Comments*@
@*<h1>List of Categories</h1>*@

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-outline-light" asp-action="Create" asp-controller="Category"><i class="bi bi-person-plus"> </i></a>
        </div>
    </div>
</div>

<table class="table table-hover table-dark" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Created Date
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-active">
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
                <td>@item.CreatedDateTime</td>
                <td role="group">
                    <a asp-action="Edit" asp-controller="Category" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>

                    <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>

</table>


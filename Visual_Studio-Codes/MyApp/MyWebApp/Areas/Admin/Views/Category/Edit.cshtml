@model CategoryModel

<form method="post">

    <div class="row pb-3">
        <h2 class="text-light">Update Category</h2>
        <hr />
    </div>
    <div asp-validation-summary="All"></div>
    <div class="card border-light p-3 mt-4">
        <div class="row mb-3">
            <label asp-for="Name" class="form-label mt-4"></label>
            <input asp-for="Name" class="form-control" id="Name" placeholder="Enter category name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div>
            <button class="btn btn-info btn-sm">Update</button>
        </div>

    </div>
    <hr />
    <a asp-action="Index" asp-controller="Category">Back to List</a>
</form>


@section scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

